#### stard-stop
# Gracefully stops the starmade server if 
# possible. If not possible, it will do whatever 
# is neccissary to turn it off.


# setup environment
source %SYSCONFDIR%/stard
if [ 'x' == "x$SHUTDOWN_TIME" ]; then
	echo "SHUTDOWN_TIME undefined. setting to 1"
	SHUTDOWN_TIME=1
fi

if [ 'x' == "x$USER" ]; then
	echo "USER undefined. exiting"
	exit 1
fi
TERMTIME=$SHUTDOWN_TIME
KILLTIME=`expr $SHUTDOWN_TIME \* 2`
appData="$baseDir/StarMade/"


# issue the starmade shutdown command
pgrep -x java -U $USER > /dev/null 2>&1 || exit 0
%STARMADEDIR%/stard/bin/stard_cmd "/shutdown $SHUTDOWN_TIME" > /dev/null 2>&1

sleep 10

# If things are still running start using a bigger hammer 
running=`pgrep -x java -U $USER | wc -l`
timer=0
while [ $running -gt 0 ]; do
	timer=`expr $timer + 1`
	if [ $timer -gt $TERMTIME ]; then
		echo "Normal Shutdown failed. Sending SIGTERM"
		pkill -U $USER -x java
		sleep 5
	fi
	
	if [ $timer -gt $KILLTIME ]; then
		echo "SIGTERM failed sending SIGKILL"
		pkill -9 -U $USER -x java
		sleep 1
	fi
	sleep 1
	running=`pgrep -x java -U $USER | wc -l`
done
