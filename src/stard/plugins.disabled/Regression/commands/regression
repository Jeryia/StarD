#!perl
package regression;
use strict;
use warnings;

use lib("../../lib/perl");
use Stard::Base;
use Starmade::Base;
use Starmade::Message;
		
use lib("./lib");
use core_reg;
use general_reg;
use player_reg;
use faction_reg;
use sector_reg;
use map_reg;
use plugin_reg;
use multiplexer_reg;
use interactive_reg;

$| = 1;
