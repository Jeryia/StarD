## setup environment
my $lastlogin_home = '.';
my $lastlogin_data = "$lastlogin_home/data";
my $stard_home = "$lastlogin_home/../..";

stard_setup_run_env($stard_home);



main(@ARGV);
exit 0;
##############################################



sub main {
	my $requester = $_[0];
	my $player;
	
	if ($_[1]) {
		$player = $_[1];
	}
	else {
		usage($requester);
		exit 1;
	}

	my $time;
	my %player_list = %{stard_player_list()};
	if ($player_list{$player}) {
		stard_pm($requester, "$player is online right now!");
		exit 0;
	}

	if (open(my $player_fh, "<", "$lastlogin_data/$player")) {
		flock($player_fh, 2);
		my @tmp = <$player_fh>;
		close($player_fh);
		$time = join("", @tmp);
		$time =~s/\D+//g;
		if ($time =~/\d/) {
			my $curtime = time;
			my $timediff = $curtime - $time;
			# convert to days
			my $timediff_days = int($timediff / 60 / 60 / 24);
			my $timediff_hours = int($timediff / 60 / 60);


			if ($timediff_days == 0) {
				stard_pm($requester, "$player was last online $timediff_hours hours ago");
			}
			else {
				stard_pm($requester, "$player was last online $timediff_days days ago");
			}
		}
		else {
			stard_pm($requester, "Error, malformed data file. Please report this to an admin!");
		}
	}
	else {
		stard_pm($requester, "$player has never logged into this server.");
	}

};

sub usage {
	my $player = $_[0];
	stard_pm($player, "usage: !lastlogin <player name>");
	stard_pm($player, "description: Gives you how long ago a player last logged in");
}
