#!perl
use strict;
use warnings;

use lib("./lib");
use lib("../../lib/perl");
use Starmade::Message;
use Starmade::Regression;


my $stard_home = "../../";
starmade_setup_lib_env($stard_home);

main(@ARGV);

sub main {
	my $player = $_[0];
	my $plugin = "Simulator";

	prep_test_category("Plugin: $plugin", 1, 1);

	test_result("$plugin - sim duel test", test_command("sim", $player, "duel", 'Isanth Type-Zero Bm', 'Isanth Type-Zero Bm') == 0);

	if(finalize_testing()) {
		exit 0;
	}
	exit 1;
}

