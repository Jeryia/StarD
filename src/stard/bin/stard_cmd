#### stard_cmd
# Run the given command on the statmade server. This is a raw interface.


# determine where the stard home is
# using our called path.
our $stard_home;
{
	my @tmp = split("/", $0);
	# grab everything but the last entry
	for (my $i = 0; $i < @tmp -1; $i++ ) {
		$stard_home .= "/$tmp[$i]";
	}
	$stard_home =~s/^\///;
	$stard_home.="/..";
}
chdir($stard_home);
$stard_home= getcwd();


# load stard_lib.
require "$stard_home/lib/stard_lib.pm";
require "$stard_home/lib/stard_core.pm";
setup_core_env($stard_home);
stard_setup_run_env($stard_home);


&main(@ARGV);

exit 0;

#################################################


sub main {
	my $cmd = shift(@_);

	if ($cmd =~/^\//) {
		print stard_cmd($cmd, @_);
	}
	elsif ($cmd =~s/^!//) {
		print plugin_command($cmd, @_);
	}
	else {
		print "Invalid command.\n";
		print "to run a starmade command use /<command>\n";
		print "to run a stard command use !<command>\n";
		exit 1;
	};
};
