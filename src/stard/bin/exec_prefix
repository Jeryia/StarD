#### exec_prefix
## the execution prefix is used to determine what 
#program should be called to launch the given 
#script. This is used to make stard function on 
#any platform as it uses the executables that 
#it detects on configure so that the programmer 
#doesn't need to know the location of binaries 
#like perl beforehand. 


# the exec table used to determine the binary to 
# call when someones uses something like #!perl
my %exec_prefix_table;
$exec_prefix_table{perl} = "%PERL%";
$exec_prefix_table{bash} = "%BASH%";



main(@ARGV);

exit 0;
#################################################

## get_exec_prefix
# Get the first line in a file, and use it as an executable
# INPUT1: executable
# OUTPUT: command to launch with
sub get_exec_prefix {
	my $exec = $_[0];
	open(my $fh, "<", $exec);
	my $prefix = <$fh>;
	close($fh);
	if ($prefix =~/#!(.*)\n/) {
		my $exec_prefix = $1;
		if ($exec_prefix_table{$exec_prefix}) {
			return $exec_prefix_table{$exec_prefix};
		}
		else {
			return $exec_prefix;
		}
	}
	return;
}

sub main {
	my $exec = $_[0];
	print get_exec_prefix($exec);
}
